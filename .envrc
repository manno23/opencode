
# Bun setup, thats the main guy as its the runtime for opencode

BUN_VERSION="1.2.19"
if [ ! -f .bun/bun-linux-x64/bun ] || [ "$(.bun/bun-linux-x64/bun --version 2>/dev/null || echo 'none')" != "$BUN_VERSION" ]; then
  rm -rf .bun
  mkdir -p .bun
  curl -L https://github.com/oven-sh/bun/releases/download/bun-v$BUN_VERSION/bun-linux-x64.zip -o .bun/bun.zip
  unzip -q .bun/bun.zip -d .bun/
  chmod +x .bun/bun-linux-x64/bun
fi
export PATH=".bun/bun-linux-x64:$PATH"


